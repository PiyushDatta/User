{
    "window.zoomLevel": 1.5,
    "editor.fontSize": 17,
    "workbench.colorTheme": "Monokai",
    "window.enableMenuBarMnemonics": false,
    "breadcrumbs.enabled": false,
    "sync.gist": "something",
    "editor.minimap.enabled": false,
    "explorer.openEditors.visible": 0,
    "window.menuBarVisibility": "hidden",
    "workbench.activityBar.visible": true,
    //running code
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
        "cpp": "mkdir -p $dir\\out && clang++ -Wall -std=c++14 -o $dir\\out/$fileNameWithoutExt $fullFileName && echo && $dir\\out/$fileNameWithoutExt",
        "python": "echo && python3 $fullFileName"
    },
    // prettier extension
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // exclude from search
    "search.exclude": {
        "**/android/app/build": true, // RN Android build folder
        "**/bower_components": true, // Bower
        "**/ios/build": true, // RN iOS build folder
        "**/ios/Pods": true, // iOS Pods code
        // "**/lib": true, // Compiled javascript
        "**/node_modules": true // NPM
    },
    // Python
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
        "--max-line-length=80",
        "--indent-size=2"
    ],
    "python.pythonPath": "python3",
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        // "editor.formatOnPaste": false
    },
    // visual
    "workbench.colorCustomizations": {
        "editor.background": "#15191b",
        "activityBar.background": "#15191b",
        "statusBar.background": "#14191f",
        "panel.background": "#15191b",
        // sidebar/treemenu
		"sideBarTitle.foreground": "#cccccc",
		"sideBarSectionHeader.background": "#151a1f",
		"sideBarSectionHeader.foreground": "#777777",
        "sideBar.border": "#1d242c",
        "sideBar.background": "#15191b",
        // "sideBar.background": "#090b0d",
        "tab.activeBackground": "#14191f",
		"tab.inactiveBackground": "#15191b",
		"tab.activeForeground": "#d1d4d3",
		"tab.activeBorder": "#66D9EF",
		"tab.inactiveForeground": "#777777",
		"tab.border": "#1d242c",
		"tab.unfocusedActiveForeground": "#d1d4d3AA",
		"tab.unfocusedInactiveForeground": "#777777",
        "tab.unfocusedActiveBorder": "#777777",
    },
    "editor.tokenColorCustomizations": {
        // comments color
        "comments": "#74715E",
        // triple quotes for python
        "textMateRules": [
            {
                "scope": "string.quoted.docstring.multi.python",
                "settings": {
                    "foreground": "#74715E"
                }
            }
        ]
    },
}